{
	"name": "kdyby/translation",
	"type": "library",
	"description": "Integration of Symfony/Translation into Nette Framework",
	"keywords": ["nette", "kdyby", "translation"],
	"homepage": "http://kdyby.org",
	"license": ["BSD-3-Clause", "GPL-2.0", "GPL-3.0"],
	"authors": [
		{
			"name": "Filip Proch√°zka",
			"homepage": "http://filip-prochazka.com",
			"email": "filip@prochazka.su"
		}
	],
	"support": {
		"email": "filip@prochazka.su",
		"issues": "https://github.com/kdyby/translation/issues"
	},
	"require": {
		"latte/latte": "~2.2@dev",
		"nette/caching": "~2.2@dev",
		"nette/di": "~2.2@dev",
		"nette/finder": "~2.2@dev",
		"nette/http": "~2.2@dev",
		"nette/neon": "~2.2@dev",
		"nette/php-generator": "~2.2@dev",
		"nette/reflection": "~2.2@dev",
		"nette/utils": "~2.2@dev",

		"symfony/translation": "~2.5",
		"symfony/config": "~2.5"
	},
	"suggest": {
		"tracy/tracy": "Diagnostics tool from Nette",
		"symfony/locale": "Locale component provides fallback code to handle cases when the intl extension is missing.",
		"kdyby/console": "If you wanna use extract command and much others, install also console.",
		"symfony/yaml": "If you wanna store translations in YAML format - supports multiline strings.",
		"texy/texy": "If you wanna use html tags in translated string"
	},
	"require-dev": {
		"nette/nette": "~2.2@dev",
		"nette/application": "~2.2@dev",
		"nette/bootstrap": "~2.2@dev",
		"nette/component-model": "~2.2@dev",
		"nette/database": "~2.2@dev",
		"nette/forms": "~2.2@dev",
		"nette/mail": "~2.2@dev",
		"nette/robot-loader": "~2.2@dev",
		"nette/safe-stream": "~2.2@dev",
		"nette/security": "~2.2@dev",
		"nette/tokenizer": "~2.2@dev",
		"tracy/tracy": "~2.2@dev",

		"symfony/console": "~2.5",
		"nette/tester": "@dev",
		"jakub-onderka/php-parallel-lint": "~0.7"
	},
	"autoload": {
		"psr-0": {
			"Kdyby\\Translation": "src/"
		},
		"classmap": [
			"src/Kdyby/Translation/exceptions.php"
		]
	},
	"extra": {
		"branch-alias": {
			"dev-master": "2.0-dev"
		}
	}
}
