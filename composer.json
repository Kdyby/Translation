{
	"name": "kdyby/translation",
	"type": "library",
	"description": "Integration of Symfony/Translation into Nette Framework",
	"keywords": ["nette", "kdyby", "translation"],
	"homepage": "http://kdyby.org",
	"license": ["BSD-3-Clause", "GPL-2.0", "GPL-3.0"],
	"authors": [
		{
			"name": "Filip Proch√°zka",
			"homepage": "http://filip-prochazka.com",
			"email": "filip@prochazka.su"
		}
	],
	"support": {
		"email": "filip@prochazka.su",
		"issues": "https://github.com/kdyby/translation/issues"
	},
	"require": {
		"latte/latte": "^2.4@dev",
		"nette/caching": "^2.4@dev",
		"nette/di": "^2.4@dev",
		"nette/finder": "^2.4@dev",
		"nette/http": "^2.4@dev",
		"nette/neon": "^2.4@dev",
		"nette/php-generator": "^2.4@dev|^3.0@dev",
		"nette/reflection": "^2.4@dev",
		"nette/utils": "^2.4@dev|^3.0@dev",

		"psr/log": "^1.0",
		"symfony/translation": "^2.5|^3.0",
		"symfony/config": "^2.5|^3.0"
	},
	"suggest": {
		"kdyby/console": "If you wanna use extract command and much others, install also console.",
		"kdyby/monolog": "Integration of Monolog into Nette Framework.",
		"tracy/tracy": "Diagnostics tool from Nette",
		"symfony/locale": "Locale component provides fallback code to handle cases when the intl extension is missing.",
		"symfony/yaml": "If you wanna store translations in YAML format - supports multiline strings."
	},
	"require-dev": {
		"nette/application": "^2.4@dev",
		"nette/bootstrap": "^2.4@dev",
		"nette/forms": "^2.4@dev",
		"tracy/tracy": "^2.4@dev",

		"kdyby/monolog": "^1.2@dev",
		"symfony/console": "^2.3|^3.0",
		"nette/tester": "~1.7",
		"mockery/mockery": "~0.9"
	},
	"autoload": {
		"psr-4": {
			"Kdyby\\Translation\\": "src/"
		},
		"classmap": [
			"src/exceptions.php"
		]
	},
	"autoload-dev": {
		"classmap": [
			"tests/KdybyTests/"
		]
	},
	"extra": {
		"branch-alias": {
			"dev-master": "2.4-dev"
		}
	}
}
